<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mainperfil">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/logopngconfiverde"
        />

    <TextView
        android:id="@+id/perfilTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi perfil"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maria Ordoñez Lopez"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/edadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad: 40 años"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/dirTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: cra 22 #9a-39 Retiro Bajo"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rutas Asignadas" />

</LinearLayout>
